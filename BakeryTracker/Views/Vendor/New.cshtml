  Layout = "_Layout";
}

<h1>🍞 😊 Pierre's Bakery 😊 🍞 </h1>
<h2>Fill out the form below to add a new vendor!</h2>
<br>

<form action="/vendors" method="post">

  <label for="vendorName">Add a vendor name:</label>
  <br>
  <input id="vendorName" name="vendorName">

  <br>
  <br> 

  <label for="vendorDescription">Add a vendor description:</label>
  <br>
  <textarea id="vendorDescription" name="vendorDescription" rows="4" cols="40"></textarea>

  <br>
  <br>

  <button type='submit'>Add Vendor</button>
</form>  
 
<br>

