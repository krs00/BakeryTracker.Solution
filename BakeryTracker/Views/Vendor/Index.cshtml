@{
    Layout = "_Layout";
}

@using BakeryTracker.Models;

<h1>🍞 😊 Pierre's Bakery 😊 🍞 </h1>
<h2>Here are your current vendors!</h2>
<br>

@if (Model.Count == 0)
{
    <h3>You don't have any vendors right now!</h3>
    <br>
    <h4><a href="vendors/new">Click here to add a new vendor</a></h4>
}
else
{
    <ul>
    @foreach (Vendor vendor in Model)
        {
            <li><a href='/vendors/@vendor.Id'>@vendor.Name<br> </a> @vendor.Description <br><br></li> 
        }
    </ul>
    <br>
    <h4><a href="vendors/new">Add a new vendor</a></h4>
}

<br>
<h4><a href="/">Back to home page</a></h4>
